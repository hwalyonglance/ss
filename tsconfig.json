{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"],
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": false,
        "typeRoots": [
            "node_modules/@types/"
        ]
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules/*",
        "**/*-aot.ts"
    ]
}